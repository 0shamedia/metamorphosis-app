{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "metamorphosis-app",
  "version": "0.1.0",
  "identifier": "com.metamorphosis.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://127.0.0.1:8188/* ws://127.0.0.1:8188",
      "capabilities": ["default"]
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Metamorphosis",
        "width": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  }
}
